{% extends 'template/layout_id_content.twig' %}
{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <nav>
                    <div class="nav nav-tabs nav-fill" id="nav-tab" role="tablist">
                        <a aria-controls="nav-transactions" aria-selected="true" class="nav-item nav-link active" data-toggle="tab" href="#nav-transactions" id="nav-transactions-tab" role="tab" style="color:  #06832a; border-bottom: 1px  #06832a solid">Transaksi</a>
                        <a aria-controls="nav-studi-kasus" aria-selected="false" class="nav-item nav-link" data-toggle="tab" href="#nav-studi-kasus" id="nav-studi-kasus-tab" role="tab" style="color:  #06832a; border-bottom: 1px  #06832a solid">Studi Kasus</a>
                    </div>
                </nav>
                <div class="tab-content py-3 px-3 px-sm-0" id="nav-tabContent">
                    <div aria-labelledby="nav-transactions-tab" class="tab-pane fade show active" id="nav-transactions" role="tabpanel">
                        <div id="trans">
                            <div class="row">
                                <div class="col-md-9">
                                    <div class="form-group">
                                        <label for="service">tentangkami</label>
                                        <select class="form-control" id="service" v-model="selectedService">
                                            <option value="All">Seluruhnya</option>
                                            <option value="Restrukturisasi dan <i>Turnaround Management</i>">Restrukturisasi dan Turnaround Management</option>
                                            <option value="Pendukung dan Penasihat Kreditor">Pendukung dan Penasihat Kreditor</option>
                                            <option value="Investigasi Keuangan dan Dukungan Litigasi">Investigasi Keuangan dan Dukungan Litigasi</option>
                                            <option value="Likuidasi, Pemberesan dan Penunjukan Pengadilan">Likuidasi, Pemberesan dan Penunjukan Pengadilan</option>
                                            <option value="Penasihat M&A dan Penggalangan Dana">Penasihat M&A dan Penggalangan Dana</option>
                                            <option value="Manajemen Inisiatif dan Pendukung Perusahaan">Manajemen Inisiatif dan Pendukung Perusahaan</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label for="country">Lokasi</label>
                                        <select class="form-control" id="country" v-model="selectedLoc">
                                            <option value="All">Seluruhnya</option>
                                            <option value="Indonesia">Indonesia</option>
                                            <option value="Singapura">Singapura</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <ul class="transactions-list">
                                        <transactions v-bind:t="trans" v-for="trans in filteredTransactions"></transactions>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div aria-labelledby="nav-studi-kasus-tab" class="tab-pane fade" id="nav-studi-kasus" role="tabpanel">
                        <div class="row">
                            {% for data in page.data %}
                                <div class="card" style="width: 25rem;margin: 12px;">
                                    <div class="card-body">
                                        <div class="title-case">
                                            <span style="font-size:10px;float:left;margin-top:15px;">Studi Kasus</span>
                                            <span><img alt="" src="{{ base_url() }}/assets/img/logo/logo-landing-transparent-sm.png" style="float: right;margin-top: 0px;" width="70px" /></span>
                                        </div>
                                        <h5 class="card-title" style="margin-top:80px;margin-bottom: 0px;">
                                            {{ data.header }}
                                        </h5>
                                        <span style="font-size: 10px;">{{ data.DateofClosing }}</span><br/><br/>
                                        <p style="margin-top:20px;">
                                            <span style="margin-top: 40px;">
                                                <a href="{{ base_url() }}/ID/tentangkami/transaksi-dan-studi-kasus/{{ data.id }}" class="btn btn-outline-light btn-sm">Baca</a>
                                            </span>
                                            <span style="font-size: 30px;float: right;margin-top: -8px">{{
                    data.Value
                  }}</span>
                                        </p>
                                        <span style="float:right;font-size:14px;margin-top:-12px;">{{
                  data.Saying
                }}</span>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}