{% extends 'template/layout_id_content.twig' %}
{% block content %}
    <div class="container">
        <div class="row mb-4">
            <div class="col-md-12">
                <h2 class="page-title">Acara & Konferensi</h2>
                <p class="lead">AJCapital secara aktif berpartisipasi dalam acara industri, konferensi, dan seminar di seluruh kawasan Asia-Pasifik, berkontribusi pada diskusi tentang restrukturisasi, kepailitan, dan penasihat keuangan.</p>
            </div>
        </div>

        {% if page.data %}
            <div class="row">
                {% for event in page.data %}
                    {% set eventDate = event.shortDate|date_modify('0 days') %}
                    {% set year = eventDate|date('Y') %}
                    {% set month = eventDate|date('m') %}
                    {% set day = eventDate|date('d') %}

                    <div class="col-md-12 mb-4">
                        <div class="event-card">
                            <div class="event-header">
                                <h4 class="event-title">
                                    <a href="{{ base_url }}/ID/acaradankonferensi/{{ year }}/{{ month }}/{{ day }}/{{ event.slug }}" class="event-link">
                                        {{ event.title }}
                                    </a>
                                </h4>
                                <p class="event-date">
                                    <i class="fa fa-calendar"></i> {{ event.date }}
                                    {% if event.location %}
                                        <span class="ml-3">
                                            <i class="fa fa-map-marker"></i> {{ event.location }}
                                        </span>
                                    {% endif %}
                                </p>
                            </div>
                            <div class="event-body">
                                <p class="event-excerpt">{{ event.excerpt }}</p>
                                {% if event.venue %}
                                    <p class="event-meta">
                                        <span class="text-green">Tempat:</span> {{ event.venue }}
                                    </p>
                                {% endif %}
                                {% if event.organizer %}
                                    <p class="event-meta">
                                        <span class="text-green">Diselenggarakan oleh:</span> {{ event.organizer }}
                                    </p>
                                {% endif %}
                                <a href="{{ base_url }}/ID/acaradankonferensi/{{ year }}/{{ month }}/{{ day }}/{{ event.slug }}" class="btn btn-sm btn-outline-success">
                                    Baca Selengkapnya <i class="fa fa-arrow-right"></i>
                                </a>
                            </div>
                        </div>
                        <hr/>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="row">
                <div class="col-md-12">
                    <p class="text-muted">Tidak ada acara yang tersedia saat ini.</p>
                </div>
            </div>
        {% endif %}
    </div>

    <style>
        .page-title {
            color: #2c5530;
            font-weight: 600;
            margin-bottom: 1rem;
        }

        .event-card {
            padding: 1.5rem 0;
        }

        .event-header {
            margin-bottom: 1rem;
        }

        .event-title {
            margin-bottom: 0.5rem;
        }

        .event-title .event-link {
            color: #2c5530;
            text-decoration: none;
            font-weight: 500;
            transition: color 0.3s ease;
        }

        .event-title .event-link:hover {
            color: #4a8a4f;
            text-decoration: underline;
        }

        .event-date {
            color: #666;
            font-size: 0.95rem;
            margin-bottom: 0;
        }

        .event-date i {
            color: #2c5530;
        }

        .event-body {
            margin-top: 1rem;
        }

        .event-excerpt {
            color: #333;
            line-height: 1.6;
            margin-bottom: 0.75rem;
        }

        .event-meta {
            font-size: 0.9rem;
            margin-bottom: 0.5rem;
            color: #555;
        }

        .text-green {
            color: #2c5530;
            font-weight: 600;
        }

        .btn-outline-success {
            color: #2c5530;
            border-color: #2c5530;
            margin-top: 0.5rem;
        }

        .btn-outline-success:hover {
            background-color: #2c5530;
            border-color: #2c5530;
            color: white;
        }
    </style>
{% endblock %}
